{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if object.hasAdvancedPrivileges %}
        {% if object.isDeputy %}
            <span class="label label-success" style="padding: 2px;">Député</span><br/>
        {% endif %}

        {% if object.isReferent %}
            <span class="label label-danger" style="padding: 2px;">Référent</span><br/>
        {% endif %}

        {% if object.isElectedOfficer %}
            <span class="label label-info" style="padding: 2px;">Responsable élu</span><br/>
        {% endif %}

        {% if object.isCoordinatorCitizenProjectSector %}
            <span class="label label-primary" style="padding: 2px;">REC</span><br/>
        {% endif %}

        {% if object.isCoordinatorCommitteeSector %}
            <span class="label label-primary" style="padding: 2px;">Coordinateur</span><br/>
        {% endif %}

        {% if object.isProcurationManager %}
            <span class="label label-primary" style="padding: 2px;">Procuration</span><br/>
        {% endif %}

        {% if object.isHostOnly %}
            <span class="label label-primary" style="background-color: #90ade6 !important; padding: 2px;">Co-Animateur</span><br/>
        {% endif %}

        {% if object.isSupervisor %}
            <span class="label label-primary" style="background-color: #90ade6 !important; padding: 2px;">Animateur</span><br/>
        {% endif %}

        {% if object.isCitizenProjectAdministrator %}
            <span class="label label-primary" style="background-color: #90ade6 !important; padding: 2px;">Porteur de projet ({{ object.citizenProjectMemberships.countCitizenProjectAdministratorMemberships }})</span><br/>
        {% endif %}

        {% if object.isBoardMember %}
            <span class="label label-primary" style="padding: 2px;">Membre du Conseil</span><br/>
        {% endif %}

    {% elseif object.isAdherent %}
        <span class="label label-primary">Adhérent</span>
    {% else %}
        <span class="label label-default">Utilisateur</span>
    {% endif %}
{% endblock %}
