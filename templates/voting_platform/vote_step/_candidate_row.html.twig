{% import 'voting_platform/_helper.html.twig' as helper %}

<div class="l__row candidate--box b__nudge--bottom-medium">
    <div class="l__col">
        {{ helper.display_candidate_photo_box(candidate) }}
    </div>

    <div class="l__col">
        <h3>{{ candidate.fullName }}</h3>

        <div>
            {% if candidate.hasBiography %}
                <p>
                    <a href="#" class="link--no-decor em-modal--trigger"
                      data-confirm-content-element="#candidate-biography-content-{{ candidate.uuid.toString|slice(0, 8) }}"
                    >Lire la présentation</a>
                </p>

                <div id="candidate-biography-content-{{ candidate.uuid.toString|slice(0, 8) }}" class="hidden">
                    <h3 class="text--uppercase b__nudge--bottom-medium">Présentation</h3>

                    <h2 class="b__nudge--bottom-large">{{ candidate.fullName }}</h2>

                    <p>{{ candidate.biography }}</p>
                </div>
            {% else %}
                <span class="text--muted text--small">Présentation indisponible</span>
            {% endif %}
        </div>
    </div>

    <div class="l__col">
        {{ form_widget(form) }}
    </div>
</div>
