{% extends 'territorial_council/_main_layout.html.twig' %}

{% block page_title 'Les membres du Conseil territorial' %}

{% block sub_content %}
    <section class="instance-page__members">
        <h2 class="b__nudge--bottom-larger">Les membres du Conseil territorial</h2>

        <div>
            {% for membership in territorial_council.memberships %}
                {% set adherent = membership.adherent %}

                <div class="instance-page__member">
                    {% include 'components/_member_identity_box.html.twig' with {
                        initials: adherent.initials,
                        full_name: adherent.fullName
                    } %}

                    <ul class="roles">
                        {% for quality in membership.qualities %}
                            <li class="role text--body">{{ ('territorial_council.membership.quality.' ~ quality.name)|trans }} <span class="text--gray">- {{ quality.zone }}</span></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

