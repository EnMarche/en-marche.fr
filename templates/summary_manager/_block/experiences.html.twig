{% extends 'summary/_block/experiences.html.twig' %}

{% block summary_experiences %}
    {{ parent() }}
    <a href="{{ path('app_summary_manager_handle_experience') }}" class="button btn summary-add-item icon--with-text">
        <i class="fa fa-plus"></i> Ajouter
    </a>
    {% block modify %}
        {{ parent() }}
        {% if experience|default(false) and not experience.new %}
            <a href="{{ path('app_summary_manager_handle_experience', { id: experience_id }) }}" class="btn">
                Modifier
            </a>
            {{ delete_form(path('app_summary_manager_remove_experience', { id: experience_id }), constant('AppBundle\\Summary\\SummaryManager::DELETE_EXPERIENCE_TOKEN')) }}
        {% endif %}
    {% endblock %}
{% endblock %}
