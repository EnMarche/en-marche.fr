<aside class="citizen_project__aside l__wrapper--aside">

    <div class="citizen_project__card">
        <h3>Nous recherchons...</h3>
        <ul>
            {% for skill in citizen_project.skills  %}
                <li>{{skill}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="citizen_project__card">
        <h3>{{ 'citizen_project.administrators_count'|transchoice(citizen_project_administrators|length) }}</h3>
        <ul>
            {% for administrator in citizen_project_administrators %}
                <li class="text--body">
                    <a class="card" href=""
                       title="{{ is_administrator and app.user.equals(administrator) ? 'Vous' : administrator }}">
                        {{ include('components/user.html.twig') }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="citizen_project__card">
        <h3>{{ 'citizen_project.followers_count'|transchoice(citizen_project_followers|length) }}</h3>
        <ul>
            {% for follower in citizen_project_followers|slice(0, 11) %}
                <li class="text--body">
                    <a class="card" href="" title="{{ follower }}">{{ include('components/user.html.twig') }}</a>
                </li>
            {% endfor %}
        </ul>
        <a href="#">Tous &gt;</a>
    </div>

    <div class="citizen_project__card">
        <h3 class="svg--black">Catégorie</h3>
        <ul>
            {{ citizen_project.category.name }}
        </ul>
    </div>

    <div class="citizen_project__card">
        <h3 class="svg--black">Localisé autour de</h3>

        <span>{{ citizen_project.cityName }}</span>

        {% if citizen_project.latitude and citizen_project.longitude %}
            <img src="{{ path('map_url', { latitude: citizen_project.latitude, longitude: citizen_project.longitude }) }}"
                 title="Carte d'accès au projet citoyen {{ citizen_project.name }}"
                 alt="{{ citizen_project.cityName }}" />
        {% endif %}
    </div>

    <div class="citizen_project__card">
        <h3 class="svg--black">{{ 'citizen_project.committees'|transchoice(citizen_project.committee|length) }}</h3>
        <ul>
            {% for committee in citizen_project.committee %}
                <li class="text--body">
                    {{ committee }}
                </li>
            {% endfor %}
        </ul>
        <a href="#">Notre comité souhaite aussi soutenir ce projet</a>
    </div>
</aside>
