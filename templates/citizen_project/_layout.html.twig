{% extends 'base.html.twig' %}

{% set is_administrator = is_administrator(citizen_project) %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        Kernel.onLoad(function(di) {
            {% if is_granted('ROLE_ADHERENT') %}
                var citizenProjectSlug = '{{ citizen_project.slug }}';
                var toggleMembershipButton = dom('#citizen_project-toggle-membership');
                var toggleMembershipLoader = dom('#citizen_project-follow-btn-loader');

                toggleMembershipButton && on(toggleMembershipButton, 'click', function () {
                    toggleMembershipLoader.style.display = 'inline';
                    toggleMembershipButton.disabled = true;

                    di.get('api').toggleCitizenProjectMembership(
                        citizenProjectSlug,
                        toggleMembershipButton.getAttribute('data-action'),
                        toggleMembershipButton.getAttribute('data-csrf-token'),
                        function (result) {
                            window.location.reload();
                        }
                    );
                });
            {% endif %}
        });

    </script>
{% endblock %}
{% block content %}
    <main class="citizen_project">
        <header class="background--pink-light space--60-0">
            <div class="l__wrapper l__row l__row--h-stretch l__mobile--col">
                <div class="text--blue--dark citizen_project__header__titles">
                    <div class="text--uppercase text--small b__nudge--bottom-tiny">
                        <strong class="text--body">Projet citoyen</strong>
                        <a href="#" class="btn btn--small btn--yellow btn--no-border">No coups de coeur</a>
                        <a href="#" class="btn btn--small btn--yellow btn--no-border">{{ 'citizen_project.committees_count'|transchoice(citizen_project.approvedCommitteeSupports|length) }}</a>
                    </div>
                    <h2 class="text--large">
                        <span id="citizen-project-name" class="citizen_project__name">{{ citizen_project.name }} : {{ citizen_project.subtitle }}</span>
                    </h2>
                    <h2 class="text--small">
                        {% if citizen_project.isApproved %}
                            {% if not user_is_adherent %}
                                <button type="button"
                                        class="btn btn--blue citizen-project-follow--disabled"
                                        disabled="disabled">
                                    Rejoindre ce projet
                                </button>

                                <a href="{{ path('app_adherent_login') }}" id="citizen-project-login-link">Connectez-vous</a>
                                ou
                                <a href="{{ path('app_membership_register') }}" id="citizen-project-register-link">adhérez</a>
                                pour suivre ce projet citoyen
                                <br />
                            {% elseif can_follow_citizen_project(citizen_project) %}
                                <button type="button"
                                        id="citizen_project-toggle-membership"
                                        class="btn btn--blue citizen-project-follow"
                                        data-action="rejoindre"
                                        data-csrf-token="{{ csrf_token('citizen_project.follow') }}">
                                    <img src="{{ asset('images/loader-sm.gif') }}" id="citizen_project-follow-btn-loader" />
                                    Rejoindre ce projet citoyen
                                </button>
                            {% elseif can_unfollow_citizen_project(citizen_project) %}
                                <button type="button"
                                        id="citizen_project-toggle-membership"
                                        class="btn btn--blue citizen-project-unfollow"
                                        data-action="quitter"
                                        data-csrf-token="{{ csrf_token('citizen_project.unfollow') }}">
                                    <img src="{{ asset('images/loader-sm.gif') }}" id="citizen_project-follow-btn-loader" />
                                    Quitter ce projet citoyen
                                </button>
                            {% elseif is_administrator %}
                                <button type="button"
                                        class="btn btn--blue citizen-project-unfollow"
                                        disabled="disabled">
                                    Quitter projet citoyen
                                </button>
                                <div class="citizen-project-follow--anonymous__link text--white">
                                    En tant que porteur de projet citoyen, vous ne pouvez pas cesser de le suivre.
                                </div>
                            {% endif %}

                            {% if is_granted('REPORT') %}
                                <a href="{{ path('app_report', {type:'citizen-project', uuid:citizen_project.uuid, redirectUrl: app.request.pathInfo}) }}" class="report-link link--blue--dark link--no-decor">Signaler un abus</a>
                            {% endif %}

                            <a href="#" class="link--blue--dark link--no-decor">Inviter un amis</a>
                            <ul class="list__links list__links--row list__links--svgs list__links--svgs--small text--white">
                                <li class="head">Partagez</li>
                                <li role="button" aria-label="Partagez sur Facebook"
                                    onclick="App.share('facebook', window.location.href, 'Rejoignez ce projet citoyen !')">
                                    <i class="fa fa-facebook-square"></i>
                                </li>
                                <li role="button" aria-label="Partagez via Twitter"
                                    onclick="App.share('twitter', window.location.href, 'Rejoignez ce projet citoyen !')">
                                    <i class="fa fa-twitter"></i>
                                </li>
                                <li role="button" aria-label="Partagez via email"
                                    onclick="App.share('email', window.location.href, 'Rejoins le projet citoyen : {{ citizen_project.name|e('js') }} de La République En Marche !')">
                                    <i class="fa fa-envelope-o"></i>
                                </li>
                            </ul>
                        {% endif %}
                    </h2>
                </div>
            </div>
        </header>

        <div class="l__wrapper l__row l__row--top l__row--h-stretch l__tablet--col">
            <div class="l__wrapper--main l__wrapper--main-left">
                {% block citizen_project_content %}{% endblock %}
            </div>

            {% block citizen_project_sidebar %}
                {{ include('citizen_project/_sidebar.html.twig') }}
            {% endblock %}
        </div>
    </main>
{% endblock %}
