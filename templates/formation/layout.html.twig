{% extends 'base.html.twig' %}

{% block app_title 'La RÃ©publique En Marche !' %}
{% block meta_description 'Espace de formation animateurs locaux' %}
{% block meta_rss '' %}

{% block open_graph_image (homepage_url ~ static_asset('pages-sharers/legislatives-trombi.jpg', {'q': 90, 'w': 1600, 'h': 800, 'fit': 'crop'}))|raw %}

{% block banner '' %}

{% block base_stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/emoji.min.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <header class="espace-formation__header l__wrapper space--20-0 l__row l__row--h-stretch">
        {% block navMap %}
            <nav>
                <ul class="list__links list__links--row list__links--no-decor list__links--nav">
                    {% set currentRoute = app.request.attributes.get('_route') %}
                    {% for route, title in {
                        'app_formation_intro': 'Introduction',
                        'app_formation_home': 'Ma formation'
                    } %}
                      <li>
                          <a href="{{ path(route) }}" class="{{ route == currentRoute ? 'active' }}">
                              {{ title }}
                          </a>
                      </li>
                    {% endfor %}
                </ul>
            </nav>
        {% endblock %}
    </header>

    {% block content__outer %}
        <main class="espace-formation">
            {% block content__inner %}{% endblock %}
        </main>
    {% endblock %}
{% endblock %}
