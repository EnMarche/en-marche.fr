        {#<p>#}
            {#<a href="{{ path('app_user_terminate_membership') }}" class="settings__delete_account">Annuler mon adhésion</a>#}
        {#</p>#}
    {#{% endif %}#}

    {% if is_granted('UNREGISTER') and app.user.basicAdherent %}
        <p>
            <a href="{{ path('app_user_terminate_membership') }}" class="settings__delete_account">Supprimer définitivement ce compte</a>
        </p>
    {% endif %}
{% endblock %}
