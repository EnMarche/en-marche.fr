<aside class="citizen_action__aside l__wrapper--aside">

    <div class="citizen_action__card">
        <h3>Quand</h3>
        <p>{{ citizen_action.beginAt|localizeddate('full', 'none')|capitalize }}</p>
        <p>De {{ citizen_action.beginAt|date('G\\hi') }} à {{ citizen_action.finishAt|date('G\\hi') }}</p>
        <a href="{{ path('app_citizen_action_export_ical', {slug: citizen_action.slug}) }}">Ajouter au calendrier</a>
    </div>

    <div class="citizen_action__card">
        <h3 class="svg--black">Où</h3>

        <p>{{ citizen_action.address }}</p>
        <p>{{ citizen_action.cityName }}, {{ citizen_action.postalCode }}</p>

        <a href="">Afficher la carte >></a>
        <div id="citizen_action_card">
            {% if citizen_action.latitude and citizen_action.longitude %}
                <img src="{{ path('map_url', { latitude: citizen_action.latitude, longitude: citizen_action.longitude }) }}"
                     title="Carte d'accès à l'action citoyenne {{ citizen_action.name }}"
                     alt="{{ citizen_action.cityName }}" />
            {% endif %}
        </div>

    </div>

    <div class="citizen_action__card">
        <h3>Organisé par</h3>
        {% if citizen_action.organizer %}
            <div class="citizen-action-organizer text--body">
                Organisé par <span class="text--bold">{{ is_granted('IS_AUTHENTICATED_FULLY') ? citizen_action.organizer.fullName : citizen_action.organizer.partialName }}</span>
                <a href="{{ path('app_adherent_contact', {uuid: citizen_action.organizer.uuid, from: 'citizen_project', id: citizen_action.uuid.toString}) }}"
                   class="link--no-decor text--blue text--normal text--summary">
                    Contacter >
                </a>
            </div>
        {% else %}
            <div class="citizen-action-organizer text--body text--white">
                Organisé par un ancien adhérent
            </div>
        {% endif %}

    </div>
</aside>
