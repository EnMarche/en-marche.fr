{% extends 'municipal_manager/_layout.html.twig' %}

{% block municipal_manager_content %}
    {% block assessor_attribution_main_block %}{% endblock %}
{% endblock %}

{% block city_actions %}
    {% set items = [
        {
            href: path("app_vote_results_municipal_manager_index", {id: place.id}|merge(route_params)),
            label: 'Voir les résultats',
            linkAttr: {
            class: 'row-action',
        }
        },
        {
        href: path("app_assessors_municipal_manager_" ~ (place.enabled ? 'disable' : 'enable') ~ "_vote_place", {id: place.id}|merge(route_params)),
        label: place.enabled ? 'Désactiver' : 'Activer',
        linkAttr: {
        class: 'row-action text--' ~ (place.enabled ? 'pink' : 'blue') ~ ' link--no-decor',
    }
        }
        ] %}

    {% include 'components/_annimated_sub_menu.html.twig' with {items: items} %}
{% endblock %}
