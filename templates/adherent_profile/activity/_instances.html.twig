        <article class="activity-card b__nudge--bottom space--30" id="political_committee">
            <div class="activity-card__type activity-card__type--instance">Instance</div>
            <h2 class="activity-card__title font-roboto text--medium b__nudge--bottom-small text--breakword text--bold">Conseil national</h2>

            <div class="activity-card__footer l__row l__row--h-stretch l__row--bottom l__row--wrap b__nudge--top">
                <div class="l__row">
                    <a href="{{ path('app_national_council_index') }}" class="btn btn--blue b__nudge--right-small">
                        Voir
                    </a>
                </div>
            </div>
        </article>
    </div>
{% endif %}
