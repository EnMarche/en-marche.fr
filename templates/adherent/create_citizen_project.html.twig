{% extends 'base.html.twig' %}

{% block page_title 'Lancez votre projet citoyen !' %}
{% block banner '' %}

{% block javascripts %}
    {% import 'javascript.js.twig' as js %}
    <script type="text/javascript">
        Kernel.onLoad(function() {
            {{ js.address(form.address) }}
        });
    </script>
{% endblock %}

{% block content %}
    <main class="citizen-projects__create">
        <section class="b__nudge--bottom-huge l__wrapper--600">
            <header class="space--60-0">
                <h1 class="b__nudge--bottom-small text--large">
                    Lancez votre projet citoyen !
                </h1>
                <p class="text--body">
                    Ce projet visera à améliorer concrètement votre quotidien — en réunissant la force et les compétences de toutes et tous.
                </p>
                <div class="text--summary">
                    Tout projet citoyen doit adhérer à <a href="#">notre charte</a>.
                    Des questions ? Consultez la <a href="{{ path('app_citizen_project_help') }}">FAQ</a>.
                </div>
            </header>

            <div class="citizen-project__form">
                <form method="post" id="create-citizen-project-form" class="form citizen-project-form">
                    {{ include('citizen_project/_form.html.twig') }}

                    <div class="space--20-30">
                        <h3>Rappel de vos informations personnelles</h3>

                        <div class="form__row" id="field-personal-information">
                            <strong>Nom</strong> : {{ app.user.lastName|upper }}<br/>
                            <strong>Prénom</strong> : {{ app.user.firstName|capitalize }}<br/>
                            <strong>Adresse e-mail</strong> : {{ app.user.emailAddress }}<br/>
                        </div>

                        <p class="wrong-personal-infos">
                            Ces informations ne sont pas justes ?
                            <a href="{{ path('app_adherent_profile') }}">Éditez-les</a>.
                        </p>
                    </div>

                    <div class="text--center">
                        <button type="submit" class="btn btn--blue btn--medium" id="create-my-citizen-project">
                            Créer un projet citoyen
                        </button>
                    </div>

                    {{ form_rest(form) }}
                </form>
            </div>
        </section>
    </main>
{% endblock %}
