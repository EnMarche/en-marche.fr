{% extends 'message/_layout.html.twig' %}

{% block messages_main_block %}
    <div class="datagrid__pre-table b__nudge--bottom-larger">
        <h3>{% block message_page_title %}Mes messages{% endblock %}</h3>
        <a href="{{ path("app_message_#{message_type}_create", route_params|default({})) }}" class="btn-type-table">
            + Nouveau message
        </a>

        {% if messages.count %}
            <span class="datagrid__count">
                <span>{{ messages.count }}</span> sur {{ messages.totalItems }} résultat(s)
            </span>
        {% endif %}
    </div>

    <div class="manager__filters">
        <div class="manager__filters__form">
            <form onchange="this.submit();">
                <h4 class="manager__filters__subtitle">Filtrer par...</h4>
                <div class="manager__filters__row">
                    <div class="manager__filters__section">
                        <div class="manager__filters__group">
                            <div class="filter__row">
                                <label class="filter__label" for="message-status-filter">Statut</label>
                                <select class="filter__field" id="message-status-filter" name="status">
                                    <option value="">Tous les messages</option>
                                    <option {{ message_filter_status == constant('AppBundle\\AdherentMessage\\AdherentMessageStatusEnum::SENT_SUCCESSFULLY') ? 'selected="selected"' }} value="{{ constant('AppBundle\\AdherentMessage\\AdherentMessageStatusEnum::SENT_SUCCESSFULLY') }}">Messages envoyés</option>
                                    <option {{ message_filter_status == constant('AppBundle\\AdherentMessage\\AdherentMessageStatusEnum::DRAFT') ? 'selected="selected"' }} value="{{ constant('AppBundle\\AdherentMessage\\AdherentMessageStatusEnum::DRAFT') }}">Brouillons</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="datagrid__table-manager">
        <thead>
            <tr>
                <th>Statut</th>
                <th class="c__width-20">Label</th>
                <th class="c__width-40">Objet</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for message in messages %}
                <tr>
                    <td class="{{ message.status == constant('AppBundle\\AdherentMessage\\AdherentMessageStatusEnum::DRAFT') ? 'status status__2' : 'status status__1' }}">
                        <span></span>{{ message.status|trans }}
                    </td>
                    <td>{{ message.label }}</td>
                    <td>{{ message.subject }}</td>
                    <td>
                        {% if message.isSent %}
                            {{ message.sentAt ? message.sentAt|localizeddate('none', 'none', 'fr_FR', null, "d MMMM Y à HH:mm") : '~' }}
                        {% else %}
                            {{ message.createdAt|localizeddate('none', 'none', 'fr_FR', null, "d MMMM Y à HH:mm") }}
                        {% endif %}
                    </td>
                    <td>
                        <div class="action-menu-oval">
                            <a href="javascript:void(0);">
                                <span class="oval"></span>
                                <span class="oval"></span>
                                <span class="oval"></span>
                            </a>
                            <div class="action-dropdown-menu">
                                {% set message_route_params = route_params|default({})|merge({uuid: message.uuid}) %}
                                {% if not message.isSent %}
                                    <a class="text--blue--dark link--no-decor" href="{{ path("app_message_#{message_type}_update", message_route_params) }}">Modifier</a>
                                {% endif %}

                                {% if message.isSynchronized %}
                                    <a class="text--blue--dark link--no-decor" href="{{ path("app_message_#{message_type}_preview", message_route_params) }}">Visualiser</a>
                                {% else %}
                                    <a class="btn--disabled" href="javascript:void(0);">
                                        Visualiser<br/>
                                        <span class="text--smallest">
                                            (en cours de préparation ...)
                                        </span>
                                    </a>
                                {% endif %}

                                {% if not message.isSent %}
                                    <a class="text--blue--dark link--no-decor" href="{{ path("app_message_#{message_type}_filter", message_route_params) }}">Filtrer</a>
                                {% endif %}

                                <a class="text--blue--dark link--no-decor" href="{{ path("app_message_#{message_type}_delete", message_route_params) }}">Supprimer</a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6" class="text--center">Vous n'avez aucun message</td></tr>
            {% endfor %}
        </tbody>
    </table>

    {% if messages.count %}
        {% set current_page = messages.currentPage %}
        {% set total_pages = messages.lastPage %}
        {% set pagination_route_name = app.request.attributes.get('_route') %}
        {% set pagination_route_params = route_params|default({})|merge(message_filter_status ? {status: message_filter_status} : {}) %}

        <div class="datagrid__pager">
            <ul>
                <li>
                    <form method="get" class="pager__go-to-page">
                        <span>Aller à la page </span>
                        {% if message_filter_status %}
                            <input type="hidden" name="status" value="{{ message_filter_status }}" />
                        {% endif %}
                        <input type="number" max="{{ total_pages }}" name="page" class="pager__action" value="{{ current_page }}"/>
                        <input type="submit" class="btn btn--blue" value="OK" />
                        <span class="b__nudge--left-large">{{ current_page }} sur {{ total_pages }}</span>
                    </form>

                </li>
                <li>
                    <a href="{{ current_page > 1 ? path(pagination_route_name, pagination_route_params|merge({ page: current_page - 1 })) : 'javascript:void(0);' }}" class="pager__action switch">
                        <svg xmlns="http://www.w3.org/2000/svg" width="9" height="14" viewBox="0 0 9 14">
                            <polygon fill="#444" points="27.45 22.571 27.45 24.571 18.45 24.571 18.45 15.571 20.45 15.571 20.45 22.571" transform="rotate(45 30.642 -5.743)"/>
                        </svg>
                    </a>
                </li>

                <li>
                    <a href="{{ current_page < total_pages ? path(pagination_route_name, pagination_route_params|merge({ page: current_page + 1 })) : 'javascript:void(0);' }}" class="pager__action switch">
                        <svg xmlns="http://www.w3.org/2000/svg" width="9" height="14" viewBox="0 0 9 14">
                            <polygon fill="#444" points="27.45 22.571 27.45 24.571 18.45 24.571 18.45 15.571 20.45 15.571 20.45 22.571" transform="scale(-1 1) rotate(45 26.142 -16.607)"/>
                        </svg>
                    </a>
                </li>
            </ul>
        </div>
    {% endif %}
{% endblock %}
