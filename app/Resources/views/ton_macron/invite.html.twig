{% extends 'ton_macron/_layout.html.twig' %}

{% block javascripts %}
    {% if transition is constant('AppBundle\\TonMacron\\InvitationProcessor::TRANSITION_SEND') %}
        {% import 'javascript.js.twig' as js %}

        <script src="{{ asset('ckeditor/ckeditor.js') }}"></script>
        <script src="{{ asset('ckeditor/lang/fr.js') }}"></script>
        <script type="text/javascript">
            {{ js.ckeditor('ton_macron_invitation_messageContent', 500) }}
        </script>
    {% endif %}
{% endblock %}

{% block content %}
    <main class="tonmacron">
        <div class="tonmacron__header">
            <h1 class="text--large b__nudge--top-large text--center l__wrapper--slim">
                Pourquoi voter Macron
            </h1>
        </div>

        {{ include('ton_macron/_'~transition~'.html.twig') }}
    </main>
{% endblock %}
