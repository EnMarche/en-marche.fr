{% extends 'base.html.twig' %}

{% block banner '' %}

{% block content %}

    <section class="l__wrapper--slim">
        <form action="{{ url }}" method="post" name="app_donation_payment">
            {% for field in form %}
                <input type="{{ field.vars.block_prefixes[1] }}"
                       name="{{ field.vars.name }}"
                       {% if field.vars.value is not empty %}value="{{ field.vars.value }}" {% endif %} />
            {% endfor %}

            <input type="submit" />
        </form>
    </section>
    
{% endblock %}
