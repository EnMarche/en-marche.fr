{% extends 'page/legislatives/layout.html.twig' %}

{% block page_title 'Recherche | Législatives' %}
{% block canonical_url url('site_legislatives_resultats_departements') %}


{% block content__inner %}

    <div class="l__wrapper">
        <a href="{{ path('site_legislatives') }}" class="icon--with-text text--summary space--20-0">
            {{ include('components/caret--left.html.twig') }}
            Retour à l'accueil</a>
    </div>

    <div class="l__wrapper--medium space--30-0 text--medium">
        8 candidats dans le département 78
    </div>

    {% block resultats %}

    <div class="l__wrapper--medium l__row l__row--wrap l__row--h-stretch">
        <div class="legislatives__departements__list">
            <div class="legislatives__departements__item">
                <a href="#"
                   class="legislatives__trombi__item__visual progressive-background link--no-decor"
                   data-sd="{{ static_asset('elles-marchent/mounir.jpg', {'w': 100, 'q': 20}) }}"
                   data-hd="{{ static_asset('elles-marchent/mounir.jpg', {'w': 300, 'q': 70}) }}">
                     <div class="text--white">
                         <h1 class="text--medium-small">Mounir Mahjoubi</h1>
                         <span class="text--body">1e circonscription<span>
                     </div>
                </a>
                <div class="legislatives__social l__row l__row--h-stretch space--10-15">
                    <a href="#" class="link--no-decor">
                        Voir son site
                    </a>
                    <div class="list__links--svgs">
                        <a href="#" class="link--no-decor">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="link--no-decor">
                            <i class="fa fa-facebook-official"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="legislatives__departements__map">
            Carte
        </div>
    </div>



    {% endblock %}

{% endblock %}
