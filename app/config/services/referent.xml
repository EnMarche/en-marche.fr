<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="app.referent.users_list_builder" class="AppBundle\Referent\UsersListBuilder">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="app.referent.referent_message_factory" class="AppBundle\Referent\ReferentMessageFactory">
            <argument type="service" id="app.referent.users_list_builder" />
        </service>

        <service id="app.referent.referent_message_handler" class="AppBundle\Referent\ReferentMessageHandler">
            <argument type="service" id="app.mailjet" />
        </service>

    </services>
</container>
